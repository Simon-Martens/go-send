<!-- Reusable tooltip template with speech bubble and pointer -->
<template id="_template_tooltip">
	<div data-role="tooltip" class="hidden opacity-0 bg-orange-700 text-white border border-orange-700 relative shadow-sm">
		<span data-role="tooltip-content"></span>
		<!-- Triangle pointer pointing back toward the element -->
		<div data-role="tooltip-pointer"></div>
	</div>
</template>
